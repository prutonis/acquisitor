    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },
        {
            "name": "Run inspect",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["inspect", "--config",  "${workspaceFolder}/acq-conf.yaml"]
        },        
        {
            "name": "Run collect",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["collect", "--config",  "${workspaceFolder}/acq-conf.yaml"]
        }, 
    ]
}